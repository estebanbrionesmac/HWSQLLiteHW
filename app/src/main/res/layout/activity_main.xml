<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.sqllitehw.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="Contact list"
        android:id="@+id/b1"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="129dp"
        android:layout_marginTop="94dp"
        android:onClick="go2ContactList"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="Companies list"
        android:id="@+id/b2"
        android:layout_below="@+id/b1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="129dp"
        android:layout_marginTop="94dp"
        android:onClick="go2CompaniesList"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="Addresses list"
        android:id="@+id/b3"
        android:layout_below="@+id/b2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="129dp"
        android:layout_marginTop="94dp"
        android:onClick="go2AddressesList"/>

</RelativeLayout>
